        "@types/busboy": "^0.2.3",
        "@types/chai": "^4.1.7",
        "@types/chai-as-promised": "^7.1.0",
        "@types/compression": "^0.0.36",
        "@types/connect-busboy": "^0.0.0",
        "@types/connect-redis": "^0.0.8",
        "@types/cors": "^2.8.4",
        "@types/debug": "^0.0.31",
        "@types/escape-html": "^0.0.20",
        "@types/expect": "^1.20.3",
        "@types/express": "^4.16.0",
        "@types/express-rate-limit": "^2.9.3",
        "@types/express-session": "^1.15.11",
        "@types/faker": "^4.1.4",
        "@types/helmet": "^0.0.42",
        "@types/mocha": "^5.2.5",
        "@types/morgan": "^1.7.35",
        "@types/node": "^10.12.12",
