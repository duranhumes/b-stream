        "busboy": "^0.2.14",
        "busboy-body-parser": "^0.3.2",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "class-validator": "^0.9.1",
        "compression": "^1.7.3",
        "connect-busboy": "^0.0.2",
        "connect-redis": "^3.4.0",
        "cors": "^2.8.5",
        "dotenv-safe": "^6.1.0",
        "escape-html": "^1.0.3",
        "express": "^4.16.4",
        "express-rate-limit": "^3.3.2",
        "express-session": "^1.15.6",
        "express-validator": "^5.3.0",
        "faker": "^4.1.0",
        "helmet": "^3.15.0",
        "mocha": "^5.2.0",
        "mysql2": "^1.6.4",
        "passport": "^0.4.0",
        "passport-local": "^1.0.0",
        "redis": "^2.8.0",
        "reflect-metadata": "^0.1.12",
        "rimraf": "^2.6.2",
        "shelljs": "^0.8.3",
        "supertest": "^3.3.0",
        "typeorm": "0.2.8",
        "uuid": "^3.3.2"
    },
